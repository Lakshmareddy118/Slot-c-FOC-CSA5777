#include<stdio.h>

int main()

{

	int n,i,sum1=0,sum2=0,sum=0;	printf("enter the numbers:");

	scanf("%d",&n);

	for(i=1;i<=n;i++)

	{

		if(i%2==1)

		{

			sum1 = sum1+i;

		}

	}

	      for(i=1;i<=n;i++)

		{

			if(i%2==0)

			{

				sum2=sum2+i;

			}

		}

	sum=sum1-sum2;

	printf("%d",sum);

}
